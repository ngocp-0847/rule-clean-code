	@echo "Cháº¡y custom linters trÃªn $(GO_PROJECT_PATH)..."
	bash $(CONFIG_DIR)/custom-linters/run-custom-linters.sh $(GO_PROJECT_PATH)

ci-setup: ## Thiáº¿t láº­p CI cho dá»± Ã¡n Go (GitHub Actions)
	@if [ -z "$(GO_PROJECT_PATH)" ]; then \
		echo "âŒ Cáº§n chá»‰ Ä‘á»‹nh Ä‘Æ°á»ng dáº«n Ä‘áº¿n dá»± Ã¡n Go: make ci-setup GO_PROJECT_PATH=/Ä‘Æ°á»ng/dáº«n/Ä‘áº¿n/dá»±/Ã¡n/go"; \
		exit 1; \

	chmod +x $(GO_PROJECT_PATH)/.git/hooks/pre-commit
	
	@echo "âœ… ÄÃ£ cÃ i Ä‘áº·t pre-commit hook táº¡i $(GO_PROJECT_PATH)/.git/hooks/pre-commit"

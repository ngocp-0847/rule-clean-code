	@echo "CÃ i Ä‘áº·t staticcheck..."
	go install honnef.co/go/tools/cmd/staticcheck@latest
	@echo "âœ… ÄÃ£ cÃ i Ä‘áº·t xong cÃ¡c phá»¥ thuá»™c!"
	@echo "ğŸ” PhiÃªn báº£n golangci-lint: $$(golangci-lint --version)"

lint: ## Cháº¡y golangci-lint trÃªn dá»± Ã¡n Go
	@if [ -z "$(GO_PROJECT_PATH)" ]; then \
		echo "âŒ Cáº§n chá»‰ Ä‘á»‹nh Ä‘Æ°á»ng dáº«n Ä‘áº¿n dá»± Ã¡n Go: make lint GO_PROJECT_PATH=/Ä‘Æ°á»ng/dáº«n/Ä‘áº¿n/dá»±/Ã¡n/go"; \
		exit 1; \
	fi
	@echo "Cháº¡y golangci-lint trÃªn $(GO_PROJECT_PATH)..."
	cd $(GO_PROJECT_PATH) && golangci-lint run --config $(CONFIG_DIR)/.golangci.yml ./...

lint-custom: ## Cháº¡y custom linters trÃªn dá»± Ã¡n Go
	@if [ -z "$(GO_PROJECT_PATH)" ]; then \
		echo "âŒ Cáº§n chá»‰ Ä‘á»‹nh Ä‘Æ°á»ng dáº«n Ä‘áº¿n dá»± Ã¡n Go: make lint-custom GO_PROJECT_PATH=/Ä‘Æ°á»ng/dáº«n/Ä‘áº¿n/dá»±/Ã¡n/go"; \
		exit 1; \
